@model List<string>;

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">ایجاد کردن</h1>

<h4 class="text-center">اسامی بازیکنان مد نظر را وارد کنید</h4>
<hr />
<div dir="rtl" class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" class="mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for(int i=1;i<=11;i++){
                <div class="input-group flex-nowrap mb-2">
                    <span class="input-group-text ms-2" id="addon-wrapping">@string.Format("{0:d2}",i)</span>
                    <input type="text" name="Names" class="form-control" placeholder="نام">
                </div>
            }
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <input type="submit" value="ایجاد" class="btn btn-success w-100" />
                        
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-100">بازگشت به لیست</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>